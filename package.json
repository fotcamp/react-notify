{
  "name": "react-popup-craft",
  "version": "1.0.0",
  "description": "Build monorepo using yarn workspace",
  "repository": "https://github.com/fotcamp/react-popup-craft",
  "contributors": [
    {
      "name": "@seungdeok",
      "email": "jeong9132@gmail.com",
      "url": "https://github.com/seungdeok"
    },
    {
      "name": "@widse",
      "email": "sohnjuhyeong727@gmail.com",
      "url": "https://github.com/widse"
    }
  ],
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "shared-styles": "yarn workspace @shared/styles run build",
    "shared-utils": "yarn workspace @shared/utils run build",
    "shared-validators": "yarn workspace @shared/validators run build",
    "format": "prettier --cache --write .",
    "lint": "eslint --cache .",
    "storybook": "yarn workspace react-popup-craft run storybook",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn format",
      "yarn lint"
    ]
  }
}
